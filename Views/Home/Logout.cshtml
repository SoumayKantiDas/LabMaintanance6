@{
    Layout = "~/Views/Shared/GeneralLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Logout</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-body text-center">
                        <h2 class="card-title">Logout</h2>
                        <p class="card-text">Logging out...</p>
                        <!-- You can add additional HTML content here if needed -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            // Automatically redirect to the logout action after 2 seconds
            setTimeout(function () {
                window.location.href = '@Url.Action("Logout", "Account")';
            }, 2000);
        });
    </script>
</body>
</html>
