@model IEnumerable<LabMaintanance6.Models.AllUser>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2>Users Record Table</h2>


    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>User Name</th>
                <th>Email</th>
                <th>Status</th>
                <th>Email Verified</th>
                <th>Role Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.username)</td>
                    <td>@Html.DisplayFor(modelItem => item.email)</td>
                    <td>@Html.DisplayFor(modelItem => item.status)</td>
                    <td>@Html.DisplayFor(modelItem => item.email_verified)</td>
                    <td>@Html.DisplayFor(modelItem => item.Role.role_name)</td>
                    <td>
                        <div class="btn-group">
                           
                            @Html.ActionLink("Delete", "Delete", new { id = item.user_id }, new { @class = "btn btn-danger" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
