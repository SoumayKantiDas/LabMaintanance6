@model IEnumerable<LabMaintanance6.Models.AllUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/GeneralLayout.cshtml";
}

<div class="container">
    <h2>Your Profile</h2>
    <p>Please click Verify Email to continue.</p>

    <table class="table table-striped table-bordered">
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.username)</td>
                <td>@Html.DisplayFor(modelItem => item.email)</td>
                <td>
                    @Html.ActionLink("Verify Email", "VerifyEmail", new { id = item.user_id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }

    </table>
</div>
