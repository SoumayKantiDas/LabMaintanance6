<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Lab Maintainior </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/bootstrap-css") <!-- Include Bootstrap CSS -->
    <style>
        .navbar-nav.ml-auto {
            margin-left: auto;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="nav-link btn btn-sm btn-bold btn-smooth" href="@Url.Action("Index", "StudentComplains")" type="button">Dashboard</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor03">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link btn btn-sm btn-bold btn-smooth" href="@Url.Action("Create", "StudentComplains")" type="button">Create_Complains</a>
                    </li>
                   
                    <li class="nav-item">
                        <a class="nav-link btn btn-sm btn-bold btn-smooth" href="@Url.Action("Index", "StudentAllUsers")" type="button">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-sm btn-bold btn-smooth" href="@Url.Action("Logout", "Home")" type="button">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4 mb-5">
        @RenderBody()
    </div>

    <footer class="footer fixed-bottom bg-light py-2">
        <div class="container">
            <p class="m-0 text-center">© 2023 Lab Maintanance Website. All CopyRights are reserved by Group 9.</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap-js") <!-- Include Bootstrap JavaScript -->
    @RenderSection("scripts", required: false)
</body>
</html>
