@model LabMaintanance6.Models.AllUser

@{
    Layout = "~/Views/Shared/GeneralLayout.cshtml";
}

<style>
    body {
        background-color: #f0f0f0;
    }

    .container {
        padding-top: 50px;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #f7f7f7;
        border-bottom: none;
        text-align: center;
    }

    .form-group {
        margin: 20px;
    }

    .form-control {
        border-radius: 5px;
    }

    .btn-primary {
        width: 100%;
        border-radius: 5px;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2>Please enter your email address here</h2>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        <div class="form-group">
                            @Html.Label("Email:")
                            @Html.TextBox("email", "", new { @class = "form-control", required = "required", placeholder = "Enter your email address" })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
