

@{
    ViewBag.Title = "Email Verification";
    Layout = "~/Views/Shared/GeneralLayout.cshtml";
}

<h2>Email Verification</h2>

<p>Please check your email for the verification OTP and enter it below:</p>


@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("OTP:", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("otp", null, new { @class = "form-control" })
            @Html.ValidationMessage("otp", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Verify" class="btn btn-primary btn-verify" />
        </div>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            // Place any additional scripts or logic here if needed.
        });
    </script>
}
